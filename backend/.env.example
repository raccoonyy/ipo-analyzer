# IPO Analyzer Environment Variables

# ========================================
# KRX API Configuration
# ========================================
# KRX API base URL
KRX_API_BASE_URL=https://data-dbg.krx.co.kr/svc/apis/sto

# KRX API key (required)
KRX_API_KEY=your_api_key_here

# API timeout settings (seconds)
KRX_API_TIMEOUT=30

# API rate limit (requests per day per API)
KRX_API_RATE_LIMIT=10000

# ========================================
# Application Settings
# ========================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE=logs/ipo_analyzer.log

# ========================================
# Data Settings
# ========================================
# Data collection year range
DATA_START_YEAR=2022
DATA_END_YEAR=2025

# Data directories
DATA_RAW_DIR=data/raw
DATA_PROCESSED_DIR=data/processed
MODELS_DIR=models
OUTPUT_DIR=output

# Prediction output (for frontend)
PREDICTION_OUTPUT_FILE=../frontend/public/ipo_precomputed.json

# ========================================
# Model Settings
# ========================================
# Model type (random_forest, gradient_boosting)
MODEL_TYPE=random_forest

# Random Forest hyperparameters
RF_N_ESTIMATORS=100
RF_MAX_DEPTH=15
RF_MIN_SAMPLES_SPLIT=5
RF_MIN_SAMPLES_LEAF=2

# Training settings
MODEL_TEST_SIZE=0.2
MODEL_RANDOM_STATE=42

# ========================================
# Database (Optional - for future use)
# ========================================
# DATABASE_URL=postgresql://user:password@localhost:5432/ipo_analyzer
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10

# ========================================
# Security (Optional - for future API)
# ========================================
# SECRET_KEY=your_secret_key_here
# JWT_SECRET_KEY=your_jwt_secret_here
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================
# Feature Flags (Optional)
# ========================================
# ENABLE_VALIDATION=true
# ENABLE_CACHING=false
# ENABLE_METRICS=true
